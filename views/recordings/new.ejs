<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/css/style.css' />
    <link rel="shortcut icon" type="image/x-icon" href="../imgs/favicon.ico">
    <title>V.O. GO</title>
</head>

<body>

    <%- include(`../nav.ejs`)%>
    <div class="container">
        <div class="sidebar"></div>
        <div class="navigation">
            <h1>Add new recording</h1>

            <form action="/recordings" method="POST">
                <div>Title: <input type="text" class="title" name="title"></div>
                <div>Embeded Recording: <br /><textarea name="recording" type="text" cols="50" rows="20"></textarea>
                </div>
                <div>Date: <input type="date" class="date" name="date"></div>
                <div>Catetgory: <select name="dropdown" class="category">
                        <% categories.map(function(c, i){ %>
                        <option value="<%= c %>"><%= c %></option>
                        <% }); %>
                    </select></div>
                <div>Food/Water Intake: <input type="text" class="intake" name="intake"></div>
                <div>Notes: <br /><textarea name="notes" type="text" cols="40" rows="10"></textarea></div>
                <div class="foot">
                    <input type="submit" value="GO" id="submit">
                    <a href="/recordings">Cancel</a>
                </div>
            </form>

        </div>
    </div>

    <%- include(`../footer`)%>
</body>

</html>